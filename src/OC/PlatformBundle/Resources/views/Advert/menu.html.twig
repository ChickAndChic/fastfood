    {% extends "OCPlatformBundle::layout.html.twig" %}

    {% block produit %}
    <div class="container">
    <div class="row">
        <div class="box">
            {% for men in menu %}
            <div class="col-lg-12">
                <hr>
                <h2 class="intro-text text-center">
                    <strong>{{ men.libellemenu }}</strong>
                </h2>
                <hr>



                <div class="col-sm-4 text-center">
                <img class="img-responsive img-border" src ="{{ asset(''~men.image~'') }}" alt="">
                    {% for cat in cate %}
                        {% if cat.idmenu == men.idmenu %}
                        <h3>{{ cat.libellecat }}</h3>
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
            {% endfor %}
            <div class="clearfix"></div>
        </div>
    </div>
    </div>
    {% endblock %}

    {% block javascripts %}
        {# Ajoutez ces lignes JavaScript si vous comptez vous servir des fonctionnalit√©s du bootstrap Twitter #}
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
{% endblock %}