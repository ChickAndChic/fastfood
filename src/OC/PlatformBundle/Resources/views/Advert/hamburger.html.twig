{# src/OC/PlatformBundle/Resources/views/Advert/hamburger.html.twig  #}
{% extends "OCPlatformBundle::layout.html.twig" %}

    {% block produit %}
<div class="container">
    <div class="row">
        <div class="box">
            <div class="col-lg-12">
                <hr>
                <h2 class="intro-text text-center">
                    <strong>Hamburger</strong>
                </h2>
                <hr>

                {% for prod in produits %}
                    {% if prod.IDCATEGORIE == "3" %}
                        <div class="col-sm-4 text-center">
                            <img class="img-responsive img-border" src="{{ asset('bundles/business/img' ~prod.image|e) }}" alt="">
                            <h3>{{ prod.libelleprod }}</h3>
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
</div>
    {% endblock %}

    {% block javascripts %}
        {# Ajoutez ces lignes JavaScript si vous comptez vous servir des fonctionnalit√©s du bootstrap Twitter #}
        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
        <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
    {% endblock %}

